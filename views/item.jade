doctype html
html
  title CampuSale
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='stylesheets/w3.css')
  link(rel='stylesheet', type='text/css', href='stylesheets/style.css')
  link(rel='stylesheet', href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
  body
    // For zoom in feature
    script(src='javascripts/jquery-1.8.3.min.js')
    script(src='javascripts/jquery.elevatezoom.js')
      #id03.modal
        form.modal-content.animate(action='#')
          .imgcontainer
            span.close(onclick="document.getElementById('id03').style.display='none'", title='Close Modal') ×
          .sell_container
            .details
              #sell_form
                form.register(action='', method='post', name='registration')
                  fieldset
                    .form-group
                      label.sellLabel(for='category') Category: 
                      select#catagory(name='Select a category')
                        option(value='select') Select a category
                        option(value='men') Men
                        option(value='women') Women
                        option(value='appliances') Appliances
                        option(value='electronics') Electronics
                        option(value='games') Video Games
                        option(value='movies') Movies and Music
                    .form-group
                      label.sellLabel(for='title') Title:
                      input.sellInput(name='title')
                    .form-group
                      label.sellLabel(for='price') Price:
                      input.sellInput(name='price')
                    .form-group
                      label.sellLabel(for='payment') Payment Option: 
                      select#payment(name='Select payment type')
                        option(value='payment') Select a payment type
                        option(value='cash') Cash
                        option(value='women') Cardinal Cash
                        option(value='check') Check
                        option(value='paypal') Paypal
                        option(value='mo') Money Order
                    .form-group
                      label.sellLabel(for='Condition') Item Condition: 
                      select#condition(name='condition')
                        option(value='condition') Choose item condition
                        option(value='new') New
                        option(value='likenew') Like New
                        option(value='used') used
                        option(value='poor') Poor
                    .form-group
                      label.sellLabel(for='location') Pickup Location:
                      input.sellInput(name='location')
                    .form-group
                      label.sellLabel(for='Description') Description:
                      input.sellInput(name='Description', type='Description')
                    form(action='/users/image', method='POST')
                      input.sellInput(type='file', name='file', value='')
                    form
                      input.sellInput(type='submit', name='Upload', value='Add')
